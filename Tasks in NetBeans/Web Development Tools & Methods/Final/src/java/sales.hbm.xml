<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="pojo.Sales" table="sales">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="native"/>
        </id>
        <property name="name" type="java.lang.String">
            <column name="name"/>
        </property>
        <property name="password" type="java.lang.String">
            <column name="password"/>
        </property>
        <set name="salesProducts" cascade="all">
            <key column="salesId"/>
            <one-to-many class="pojo.SalesProduct"/>
        </set>
    </class>
    
    <class name="pojo.SalesProduct" table="salesproduct">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="native"/>
        </id>
        <property name="supplierName" type="java.lang.String">
            <column name="supplierName"/>
        </property>
        <property name="name" type="java.lang.String">
            <column name="name"/>
        </property>
        <property name="buyingPrice" type="java.lang.Double">
            <column name="buyingPrice"/>
        </property>
        <property name="SalingPrice" type="java.lang.Double">
            <column name="SalingPrice"/>
        </property>
        <property name="count" type="java.lang.Integer">
            <column name="count"/>
        </property>
    </class>
</hibernate-mapping>
