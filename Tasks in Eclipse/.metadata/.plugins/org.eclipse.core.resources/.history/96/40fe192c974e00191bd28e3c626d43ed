package test;

import java.util.*;

import javax.lang.model.element.Element;

public class test1 {
	public void show(String s) {
		Map<Character,Integer> map = new HashMap<>();
        map.put('I',1);
        map.put('V',5);
        map.put('X',10);
        map.put('L',50);
        map.put('C',100);
        map.put('D',500);
        map.put('M', 1000);

        int tem = 0;
        int sum = 0;
        for(int i=0;i<s.length()-1;i++) {
        	int num = map.get(s.charAt(i));
        	
        	if(map.get(s.charAt(i+1)) > num) {
        		sum = sum-num-tem;
        		tem = 0;
        	}else if(map.get(s.charAt(i+1)) > num) {
        		tem += num;
        	}else {
        		sum = sum+num;
        	}
        }
        
        System.out.println(sum);
	}
	
}
