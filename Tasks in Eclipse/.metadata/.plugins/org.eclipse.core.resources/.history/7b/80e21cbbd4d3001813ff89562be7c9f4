package neu.edu.csye6200.team.view;
import java.util.ArrayList;
import java.util.List;

import javafx.fxml.FXML;
import javafx.scene.control.TableColumn;
import javafx.stage.Stage;
import neu.edu.csye6200.team.objects.Rules;
/**
 * Dialog to edit details of a person.
 * 
 * @author Marco Jakob
 */
public class RegulationRulesController {

	@FXML
    private TableColumn<Rules, String> ageColumn;
    @FXML
    private TableColumn<Rules, String> groupSizeColumn;
    @FXML
    private TableColumn<Rules, String> ratioColumn;
    @FXML
    private TableColumn<Rules, String> maxGroupColumn;

    private Stage dialogStage;


    @FXML
    private void initialize() {
    	List<Rules> rule = new ArrayList<>();
    	rule.add(new Rules(6,12,4,"4:1",3));
    	rule.add(new Rules(13,24,5,"5:1",3));
    	rule.add(new Rules(25,35,6,"6:1",3));
    	rule.add(new Rules(36,47,8,"8:1",3));
    	rule.add(new Rules(48,59,12,"12:1",2));
    	rule.add(new Rules(60,"on up",15,"15:1",2));
    	
    	
    	ageColumn.setCellValueFactory(
                cellData -> cellData.getValue().);
    }


    public void setDialogStage(Stage dialogStage) {
        this.dialogStage = dialogStage;
    }

    @FXML
    private void handleCancel() {
        dialogStage.close();
    }

}